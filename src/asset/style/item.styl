.todo-item
    position relative
    background #ffffff
    font-size 24px
    border-bottom 1px solid rgba(0,0,0,.06)
    &:hover
        .destroy:after {
            content: 'x'
        }
    label
        white-space pre-line
        word-break break-all
        padding 15px 60px 15px 15px
        margin-left 45px
        display block
        line-height 1.2
        transition color 0.4s

.todo-item.completed
         label
              color #d9d9d9
              text-decoration line-through

.todo-item .toggle{
        text-align center
        width 400px
        height 40px
        position absolute
        top 0
        bottom 0
        margin auto 0
        border none
        outline none
        appearance none 
    }
.todo-item .toggle:before{
        content:url('../image/close-circle.svg')
        position absolute
        left 12px
        cursor pointer
    }
.todo-item .toggle:checked:before{
        content : url('../image/check-circle.svg')
        position absolute
        left 12px
        cursor pointer
    }
    .destroy
        position absolute
        top 50%
        right 10px
        bottom 0;
        width 40px
        height 40px
        margin auto 0;
        font-size 30px
        color #cc9a9a;
        margin-bottom 11px
        transition: color 0.2s east-out
        background-color transparent
        appearance none
        border-width 0
        cursor pointer
        outline none